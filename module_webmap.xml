<?xml version="1.0" encoding="UTF-8"?>
<project name="module_webmap" default="compile.module.webmap">
  <dirname property="module.webmap.basedir" file="${ant.file.module_webmap}"/>
  
  <property name="module.jdk.home.webmap" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.webmap" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.webmap" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.webmap" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="webmap.output.dir" value="${module.webmap.basedir}/../out/production/WebMap"/>
  <property name="webmap.testoutput.dir" value="${module.webmap.basedir}/../out/test/WebMap"/>
  
  <path id="webmap.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="webmap.module.production.classpath">
    <path refid="${module.jdk.classpath.webmap}"/>
    <path refid="library.parse-1.4.1.classpath"/>
  </path>
  
  <path id="webmap.runtime.production.module.classpath">
    <pathelement location="${webmap.output.dir}"/>
    <path refid="library.parse-1.4.1.classpath"/>
  </path>
  
  <path id="webmap.module.classpath">
    <path refid="${module.jdk.classpath.webmap}"/>
    <pathelement location="${webmap.output.dir}"/>
    <path refid="library.parse-1.4.1.classpath"/>
  </path>
  
  <path id="webmap.runtime.module.classpath">
    <pathelement location="${webmap.testoutput.dir}"/>
    <pathelement location="${webmap.output.dir}"/>
    <path refid="library.parse-1.4.1.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.webmap">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.webmap">
    <patternset refid="excluded.from.module.webmap"/>
  </patternset>
  
  <path id="webmap.module.sourcepath">
    <dirset dir="${module.webmap.basedir}">
      <include name="gen"/>
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.webmap" depends="compile.module.webmap.production,compile.module.webmap.tests" description="Compile module WebMap"/>
  
  <target name="compile.module.webmap.production" depends="register.custom.compilers" description="Compile module WebMap; production classes">
    <mkdir dir="${webmap.output.dir}"/>
    <javac2 destdir="${webmap.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.webmap}/javac">
      <compilerarg line="${compiler.args.webmap}"/>
      <bootclasspath refid="webmap.module.bootclasspath"/>
      <classpath refid="webmap.module.production.classpath"/>
      <src refid="webmap.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.webmap"/>
    </javac2>
    
    <copy todir="${webmap.output.dir}">
      <fileset dir="${module.webmap.basedir}/gen">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.webmap.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.webmap.tests" depends="register.custom.compilers,compile.module.webmap.production" description="compile module WebMap; test classes" unless="skip.tests"/>
  
  <target name="clean.module.webmap" description="cleanup module">
    <delete dir="${webmap.output.dir}"/>
    <delete dir="${webmap.testoutput.dir}"/>
  </target>
</project>